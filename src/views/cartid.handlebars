<div>
    <h1> Que anda amigo </h1>
    <table class="product-list">
        <tr>
            <th> ID Carrito </th>
            <th> Productos </th>
            <th> Comprar mas </th>
        </tr>
        {{#if cid}}
            <tbody>
                <tr>
                    <td>{{cart._id}}</td>
                    <td>
                    {{#each products}}
                        <div>
                            {{this.product}}
                        </div>
                    {{/each}}
                    </td>
                    <td> 
                        <form action="/api/tickets" method="post">
                            <input type="submit" value="Finalizar compra"> 
                        </form>
                    </td>
                </tr>
            </tbody> 
        {{/if}}
    </table>
</div>


<style>
    table,
    th {
        border: 1px solid;
    }

    .title,
    tr,
    h1,
    h2 {
        text-align: center;
    }

    .product-list {
        width: 100%;
        text-align: center;
    }

</style>