<div>
    <div class="divtabla">
        <form action="" method="post">
            <input type="text" name="title" placeholder="Titulo">
            <input type="text" name="description" placeholder="Descripcion">
            <input type="text" name="code" placeholder="Code">
            <input type="number" name="price" placeholder="Precio">
            <input type="number" name="stock" placeholder="Stock">
            <input type="text" name="category" placeholder="Category">
            <input type="submit" value="Enviar">
        </form>
    </div>
    <div class="divtabla">
        <form id="delete-product-form">
            <input id="id-Field-value" type="text" name="id" placeholder="ID">
            <input type="submit" value="Eliminar">
        </form>
    </div>
    <h2> Tu lista de items es </h2>
    <form action="/api/products">
        Buscador: <input type="text" placeholder="Titulo" value="{{query}}" name="query"> <input type="submit"
            value="Buscar">
    </form>

    <div>
        <table class="product-list">
            <tr>
                <th> Titulo </th>
                <th> Precio </th>
                <th> Descripcion </th>
                <th> Stock </th>
                <th> Code </th>
                <th> ID </th>
                <th> Comprar </th>
            </tr>
            <tbody>
                {{#if pid}}
            <tbody>
                <tr>
                    <td> {{product.title}} </td>
                    <td> ${{product.price}} </td>
                    <td> {{product.description}} </td>
                    <td> {{product.stock}} </td>
                    <td> {{product.code}} </td>
                    <td> {{product._id}} </td>
                    <td> <input type="submit" value="Agregar al Carrito"> </td>
                </tr>
            </tbody>
            {{/if}}
            {{#each productos}}
            <tbody>
                <tr>
                    <td> {{this.title}} </td>
                    <td> ${{this.price}} </td>
                    <td> {{this.description}} </td>
                    <td> {{this.stock}} </td>
                    <td> {{this.code}} </td>
                </tr>
            </tbody>
            {{/each}}
            </tbody>
            {{#each result.docs}}
            <tbody>
                <tr>
                    <td>{{this.title}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.stock}}</td>
                    <td>{{this.code}}</td>
                    <td>{{this._id}}</td>
                    <td>
                        <form action="/api/carts/{{../cid}}/products/{{this._id}}" method="post">
                            <input type="submit" value="Agregar al Carrito">
                        </form>
                    </td>
                </tr>
            </tbody>
            {{/each}}
        </table>
        <div>
            {{#if result.hasPrevPage}}
            <a href="{{result.prevLink}}"> Anterior </a>
            {{/if}}
            {{page}}
            {{#if result.hasNextPage}}
            <a href="{{result.nextLink}}"> Siguiente </a>
            {{/if}}
        </div>
    </div>
    <div class="divchat">
        <input type="text" id="chatBox">
    </div>
    <div>
        <p class="divchat" id="messageLogs"></p>
    </div>
</div>


<style>
    table,
    th {
        border: 1px solid;
    }

    .title,
    tr,
    h1,
    h2 {
        text-align: center;
    }

    .loginOptions {
        display: flex;
        justify-content: start;
        align-items: center;
        gap: 1rem;
    }

    .product-list {
        width: 100%;
    }

    .divtabla {
        padding: 10px;
    }

    .divchat {
        padding-top: 2%;
    }
</style>